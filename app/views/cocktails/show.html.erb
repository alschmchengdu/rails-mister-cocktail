<div class="banner" style="  background-image: linear-gradient(-225deg, rgba(0,101,168,0.4) 0%, rgba(0,36,61,0.4) 50%), url('<%= asset_path('MacMahanMap.jpg') %>'); background-position: center center">
  <div class="container">
    <div class="row">
      <div class="col col-xs-12 col-xs-12 col-sm-6 col-sm-offset-3">
        <h1><%= @cocktail.name %></h1>
        <% @cocktail.doses.each do |d| %>
          <p>
            <%= d.id %>
            <%= d.description %>
            <%= Ingredient.find(d.ingredient_id).name %>
            <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
            <%= link_to "delete", cocktail_dose_path(cocktail_id: @cocktail.id, id: d.id), method: :delete %>
          </p>
        <% end %>
        <%= link_to "add a dose", new_cocktail_dose_path(cocktail_id: @cocktail.id), class: "btn btn-warning btn-md" %>
        <%= link_to "back to cocktail list", cocktails_path, class: "btn btn-warning btn-md" %>
      </div>
    </div>
  </div>
</div>


